  "author": "Egzon Arifi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/egzonarifi/mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/egzonarifi/mcp-server/issues"
  },
  "homepage": "https://github.com/egzonarifi/mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
